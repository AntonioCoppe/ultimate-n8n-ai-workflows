    {
      "parameters": {
        "jsCode": "// Collect search terms from sheet rows\nreturn [\n  {\n    json: {\n      search_terms: $input.all().map(item => item.json.search_term).filter(Boolean),\n      location: $input.first().json.location || 'Remote',\n      country: $input.first().json.country || 'United States'\n    }\n  }\n];"
      },
      "id": "3",
      "name": "Set Apify Input",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=https://api.apify.com/v2/acts/jpraRc4MCUh5ehbHV/run-sync-get-dataset-items?token=YOUR_APIFY_TOKEN",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "max_results",
              "value": 50
            },
            {
              "name": "posted_since",
              "value": "1 day"
            },
            {
              "name": "country",
              "value": "={{ $json.country }}"
            },
            {
              "name": "location",
              "value": "={{ $json.location }}"
            },
            {
              "name": "search_terms",
              "value": "={{ $json.search_terms }}"
            }
          ]
        },
        "options": {
          "response": {
            "response": {
              "fullResponse": true
            }
          }
        }
      },
      "id": "4",
      "name": "Fetch Jobs via Apify",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [900, 300]
    },
    {
      "parameters": {
        "jsCode": "// Parse Apify response (assume body is array of jobs)\nconst jobs = $input.first().json.body || [];\nconst now = new Date();\nconst twentyFourHoursAgo = new Date(now.getTime() - 24 * 60 * 60 * 1000);\nconst keyword = 'software engineer'; // Customize\nreturn jobs.filter(job => {\n  const posted = new Date(job.posted_date || job.timestamp);\n  return posted > twentyFourHoursAgo && (job.title.toLowerCase().includes(keyword.toLowerCase()) || job.description.toLowerCase().includes(keyword.toLowerCase()));\n}).map(job => ({\n  json: {\n    title: job.title,\n    company: job.company_name,\n    description: job.description,\n    link: job.url || job.job_url,\n    location: job.location,\n    platform: job.platform,\n    posted_date: job.posted_date\n  }\n}));"
      },
      "id": "5",
      "name": "Filter Fresh & Keywords",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1120, 300]
    },
    {
      "parameters": {
        "resource": "file",
        "operation": "download",
        "fileId": "YOUR_RESUME_FILE_ID",
        "options": {}
      },
      "id": "6",
      "name": "Load Resume",
      "type": "n8n-nodes-base.googleDrive",
      "typeVersion": 3.2,
      "position": [1340, 300],
      "credentials": {
        "googleDriveOAuth2Api": {
          "id": "gdrive-placeholder",
          "name": "Google Drive"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Assume resume is text; extract text (for PDF, add OCR or assume pre-text)\nconst resumeBuffer = $input.first().binary.data;\nconst resumeText = resumeBuffer.toString('utf8'); // Simple for text\nreturn items.map(item => ({\n  json: {\n    ...item.json,\n    resumeText\n  }\n}));"
      },
      "id": "7",
      "name": "Extract Resume Text",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1560, 300]
    },
    {
      "parameters": {
        "authentication": "openAiApi",
        "model": "gpt-4o-mini",
        "messages": {
          "values": [
            {
              "role": "system",
              "content": "Score job-resume fit 0-100 based on skills, experience. Output ONLY: Score: [num]|Keywords: [comma list]|Gaps: [brief]"
            },
            {
              "role": "user",
              "content": "=Resume: {{ $json.resumeText }}\nJob: {{ $json.title }} at {{ $json.company }}\nDesc: {{ $json.description }}\nScore:"
            }
          ]
        },
        "options": {
          "maxTokens": 100,
          "temperature": 0.3
        }
      },
      "id": "8",
      "name": "OpenAI Score Fit",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1.1,
      "position": [1780, 300],
      "credentials": {
        "openAiApi": {
          "id": "openai-placeholder",
          "name": "OpenAI"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "return items.map(item => {\n  const response = item.json;\n  let score = 0, keywords = [], gaps = '';\n  if (response.choices && response.choices[0].message.content) {\n    const content = response.choices[0].message.content;\n    const scoreMatch = content.match(/Score:\s*(\\d+)/);\n    const kwMatch = content.match(/Keywords:\s*\\[(.?)\\]/) || content.match(/Keywords:\s(.+)/);\n    const gapMatch = content.match(/Gaps:\s*(.+)/);\n    score = parseInt(scoreMatch ? scoreMatch[1] : 0);\n    keywords = (kwMatch ? kwMatch[1] : '').split(',').map(k => k.trim());\n    gaps = gapMatch ? gapMatch[1].trim() : '';\n  }\n  const job = $input.all()[items.length - 1].json; // Previous job data\n  return { json: { ...job, score, keywords: keywords.join(','), gaps } };\n});"
      },
      "id": "9",
      "name": "Extract Score",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [2000, 300]
    },
    {
      "parameters": {
        "operation": "append",
        "documentId": "YOUR_SHEETS_ID",
        "sheetName": "=Scored Jobs",
        "columns": {
          "mappingMode": "defineBelow",
          "value": {
            "title": "={{ $json.title }}",
            "company": "={{ $json.company }}",
            "link": "={{ $json.link }}",
            "score": "={{ $json.score }}",
            "keywords": "={{ $json.keywords }}",
            "gaps": "={{ $json.gaps }}",
            "platform": "={{ $json.platform }}",
            "timestamp": "={{ new Date().toISOString() }}"
          }
        },
        "options": {}
      },
      "id": "10",
      "name": "Log Scored Jobs to Sheet",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 4.2,
      "position": [2220, 300],
