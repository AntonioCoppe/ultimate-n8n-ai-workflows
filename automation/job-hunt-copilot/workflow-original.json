      "name": "Hunt Recruiters (LinkedIn Search)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [2660, 400]
    },
    {
      "parameters": {
        "jsCode": "// Simple HTML parse for top 3 names (use regex; for prod, add Cheerio via npm but n8n Code is limited)\nconst html = $input.first().json.body;\nconst nameMatches = (html.match(/data-name=\"([^\"]+)\"/g) || []).slice(0,3).map(m => m.replace(/data-name=/, '').replace(/\"/g, ''));\nconst recruiters = nameMatches.length ? nameMatches.join(', ') : 'No recruiters found';\nreturn [{ json: { recruiters } }];"
      },
      "id": "14",
      "name": "Extract Recruiters",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [2880, 400]
