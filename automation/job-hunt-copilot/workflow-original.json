      "parameters": {
        "authentication": "openAiApi",
        "model": "gpt-4o-mini",
        "messages": {
          "values": [
            {
              "role": "system",
              "content": "Draft personalized cold outreach message for LinkedIn InMail. Make it concise (200 words), reference my profile ({{ $json.user_profile }}), my likes/skills, the company's work from job desc, and job fit. Output ONLY: Message: [text]"
            },
            {
              "role": "user",
              "content": "=User: {{ $('Set User Profile').item.json.user_profile }}\nJob: {{ $json.title }} at {{ $json.company }}\nDesc: {{ $json.description }} (what they do: infer from desc)\nRecruiters: {{ $json.recruiters }}\nDraft message:"
            }
          ]
        },
        "options": {
          "maxTokens": 300,
          "temperature": 0.7
        }
      },
      "id": "15",
      "name": "OpenAI Outreach Draft",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1.1,
      "position": [3100, 300],
      "credentials": {
        "openAiApi": {
          "id": "openai-placeholder",
          "name": "OpenAI"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "const response = $input.first().json;\nlet message = '';\nif (response.choices && response.choices[0].message.content) {\n  message = response.choices[0].message.content.replace(/Message:\\s*/i, '').trim();\n}\nconst prev = $('IF High Match (>=70)').item.json;\nconst recruitersData = $('Extract Recruiters').item.json;\nreturn [{ \n  json: { \n    ...prev, \n    message, \n    recruiters: recruitersData.recruiters \n  } \n}];"
      },
